{
  "manifest_version": 3,
  "name": "CopyMaster Pro",
  "version": "3.2.0",
  "description": "Ultimate copy & productivity suite: text, HTML, Markdown, JSON, CSV, images, links, colors, snippets & more.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "CopyMaster Pro",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "commands": {
    "quick_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Quick clean copy: selection or element picker"
    },
    "quick_color": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick color picker"
    },
    "quick_unicode": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Quick unicode fix"
    },
    "quick_title": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick smart title case"
    }
  }
}
