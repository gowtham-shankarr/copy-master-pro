{
  "manifest_version": 3,
  "name": "CopyMaster Pro",
  "version": "3.2.0",
  "description": "Ultimate copy & productivity suite: Text/HTML/Markdown/CSV/JSON + Image capture/URL extractor + Color picker/palette + Case converter + Unicode fix + Link extractor + Meta scraper + Clipboard history + Snippets library + Per-site rules + Smart formatting + Developer tools.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "CopyMaster Pro",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "commands": {
    "quick_copy": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Quick clean copy: selection or element picker"
    },
    "quick_color": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick color picker"
    },
    "quick_unicode": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Quick unicode fix"
    },
    "quick_title": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick smart title case"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
